generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String       @unique
  emailVerified DateTime?
  password      String?
  image         String?
  accounts      Account[]
  assignments   Assignment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// Define an enum for assignment status
enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
  GRADED
}

model Assignment {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  title       String
  description String?
  dueDate     DateTime
  status      Status   @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation fields
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Model for a Quiz
model Question {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  category      String
  text          String
  options       String[]
  correctOption Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
